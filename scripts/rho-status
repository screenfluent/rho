#!/usr/bin/env bash
# rho-status (legacy wrapper) â€” delegate to the Node.js CLI

set -euo pipefail

if [ -f "$HOME/.config/rho/config" ]; then
  # shellcheck disable=SC1090
  . "$HOME/.config/rho/config"
fi

RHO_DIR="${RHO_DIR:-$HOME/projects/rho}"
CLI="$RHO_DIR/cli/index.ts"

exec node --experimental-strip-types "$CLI" status "$@"
